<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="120dp" />

    <Button
        android:id="@+id/btn_first_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Add"
        app:layout_constraintBottom_toTopOf="@id/btn_first_remove"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_first_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_second_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Add"
        app:layout_constraintBottom_toTopOf="@id/btn_second_remove"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_second_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>